{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksVersion": "1.38.0",
    "watchPatterns": [
      "app/**",
      "main.py",
      "requirements.txt",
      "railway.json",
      "nixpacks.toml",
      "scripts/version.sh",
      "Procfile"
    ]
  },
  "deploy": {
    "startCommand": "uvicorn main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/api/v1/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
