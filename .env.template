# LinkedIn Ingestion Service - Environment Variables Template
# Copy this to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.1

# Stage-Based Model Configuration
STAGE_2_MODEL=gpt-3.5-turbo
STAGE_3_MODEL=gpt-4o

# API Security
API_KEY=your_secure_api_key_here

# Cassidy Configuration
CASSIDY_API_KEY=your_cassidy_api_key_here
CASSIDY_WORKFLOW_ID=your_workflow_id_here
CASSIDY_COMPANY_WORKFLOW_ID=your_company_workflow_id_here

# Application Configuration
ENVIRONMENT=development
ENABLE_COMPANY_INGESTION=true
SIMILARITY_THRESHOLD=0.8
VECTOR_DIMENSION=1536

# Container Registry (for deployment)
REGISTRY_URL=ghcr.io/bautrey
GITHUB_TOKEN=your_github_token_here  # For GitHub Container Registry

# Railway/Docker Configuration
PORT=8000
