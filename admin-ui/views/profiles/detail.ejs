<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LinkedIn Ingestion Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="sidebar-wrapper px-0">
                <%- include('../partials/sidebar') %>
            </div>
            
            <!-- Main Content -->
            <div class="main-content">
                <%- include('../partials/header', { pageTitle: title }) %>
                
                <div class="container-fluid py-4">
                    <!-- Page Header with Navigation -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="d-flex align-items-center">
                            <a href="/profiles" class="btn btn-outline-secondary me-3">
                                <i class="bi bi-arrow-left"></i> Back to Profiles
                            </a>
                            <div>
                                <h2 class="fw-bold mb-1"><%= profile.name || 'Unknown Name' %></h2>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-clock"></i> Added on <%= new Date(profile.created_at).toLocaleDateString() %>
                                    <% if (profile.linkedin_id) { %>
                                        • LinkedIn ID: <%= profile.linkedin_id %>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-primary" onclick="scoreProfile('<%= profile.id %>')">
                                <i class="bi bi-award"></i> Score Profile
                            </button>
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-three-dots"></i> More Actions
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="<%= profile.url %>" target="_blank">
                                        <i class="bi bi-linkedin"></i> View on LinkedIn
                                    </a></li>
                                    <li><a class="dropdown-item" href="#" onclick="exportProfile('<%= profile.id %>')">
                                        <i class="bi bi-download"></i> Export Profile
                                    </a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item text-danger" href="#" onclick="deleteProfile('<%= profile.id %>')">
                                        <i class="bi bi-trash"></i> Delete Profile
                                    </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Left Column - Profile Information -->
                        <div class="col-lg-8">
                            <!-- Basic Information Card -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3 text-center">
                                            <% if (profile.profile_image) { %>
                                                <img src="<%= profile.profile_image %>" 
                                                     alt="<%= profile.name %>" 
                                                     class="rounded-circle mb-3" 
                                                     style="width: 120px; height: 120px; object-fit: cover;">
                                            <% } else { %>
                                                <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mb-3 mx-auto" 
                                                     style="width: 120px; height: 120px;">
                                                    <i class="bi bi-person text-white" style="font-size: 3rem;"></i>
                                                </div>
                                            <% } %>
                                            <% if (profile.url) { %>
                                                <div>
                                                    <a href="<%= profile.url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-linkedin"></i> View LinkedIn
                                                    </a>
                                                </div>
                                            <% } %>
                                        </div>
                                        <div class="col-md-9">
                                            <h4 class="fw-bold mb-1"><%= profile.name %></h4>
                                            <% if (profile.position) { %>
                                                <p class="text-primary fw-medium mb-2"><%= profile.position %></p>
                                            <% } %>
                                            <% if (profile.current_company && profile.current_company.name) { %>
                                                <p class="text-muted mb-2">
                                                    <i class="bi bi-building"></i> 
                                                    <span data-company="<%= profile.current_company.name %>">
                                                        <%= profile.current_company.name %>
                                                    </span>
                                                </p>
                                            <% } %>
                                            <% if (profile.city || profile.country_code) { %>
                                                <p class="text-muted mb-3">
                                                    <i class="bi bi-geo-alt"></i> 
                                                    <%= profile.city %><% if (profile.city && profile.country_code) { %>, <% } %><%= profile.country_code %>
                                                </p>
                                            <% } %>
                                            <div class="row">
                                                <% if (profile.connections !== null && profile.connections !== undefined) { %>
                                                    <div class="col-md-6">
                                                        <small class="text-muted">Connections</small>
                                                        <div class="fw-medium"><%= profile.connections %></div>
                                                    </div>
                                                <% } %>
                                                <% if (profile.followers !== null && profile.followers !== undefined) { %>
                                                    <div class="col-md-6">
                                                        <small class="text-muted">Followers</small>
                                                        <div class="fw-medium"><%= profile.followers %></div>
                                                    </div>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- About Section -->
                            <% if (profile.about) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-transparent border-0 pb-0">
                                        <h5 class="fw-bold mb-0">
                                            <i class="bi bi-person-lines-fill text-primary"></i> About
                                        </h5>
                                    </div>
                                    <div class="card-body pt-2">
                                        <div class="profile-about">
                                            <%= profile.about.replace(/\n/g, '<br>') %>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Experience Section -->
                            <% if (profile.experience && profile.experience.length > 0) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-transparent border-0 pb-0">
                                        <h5 class="fw-bold mb-0">
                                            <i class="bi bi-briefcase text-primary"></i> Experience
                                        </h5>
                                    </div>
                                    <div class="card-body pt-2">
                                        <% profile.experience.forEach((exp, index) => { %>
                                            <div class="d-flex <% if (index < profile.experience.length - 1) { %>mb-4 pb-3 border-bottom<% } else { %>mb-2<% } %>">
                                                <div class="me-3 mt-1">
                                                    <% if (exp.company_logo_url) { %>
                                                        <img src="<%= exp.company_logo_url %>" 
                                                             alt="<%= exp.company %>" 
                                                             class="rounded" 
                                                             style="width: 48px; height: 48px; object-fit: contain;">
                                                    <% } else { %>
                                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                             style="width: 48px; height: 48px;">
                                                            <i class="bi bi-building text-muted"></i>
                                                        </div>
                                                    <% } %>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="fw-bold mb-1"><%= exp.title %></h6>
                                                    <div class="text-primary fw-medium mb-1">
                                                        <% if (exp.company_linkedin_url) { %>
                                                            <a href="<%= exp.company_linkedin_url %>" target="_blank" class="text-decoration-none" data-company="<%= exp.company %>">
                                                                <%= exp.company %>
                                                            </a>
                                                        <% } else { %>
                                                            <span data-company="<%= exp.company %>">
                                                                <%= exp.company %>
                                                            </span>
                                                        <% } %>
                                                    </div>
                                                    <% if (exp.date_range || exp.duration) { %>
                                                        <div class="text-muted small mb-1">
                                                            <%= exp.date_range || exp.duration %>
                                                        </div>
                                                    <% } %>
                                                    <% if (exp.location) { %>
                                                        <div class="text-muted small mb-2">
                                                            <i class="bi bi-geo-alt"></i> <%= exp.location %>
                                                        </div>
                                                    <% } %>
                                                    <% if (exp.description) { %>
                                                        <div class="experience-description">
                                                            <%= exp.description %>
                                                        </div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Education Section -->
                            <% if (profile.education && profile.education.length > 0) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-transparent border-0 pb-0">
                                        <h5 class="fw-bold mb-0">
                                            <i class="bi bi-mortarboard text-primary"></i> Education
                                        </h5>
                                    </div>
                                    <div class="card-body pt-2">
                                        <% profile.education.forEach((edu, index) => { %>
                                            <div class="d-flex <% if (index < profile.education.length - 1) { %>mb-3 pb-3 border-bottom<% } else { %>mb-2<% } %>">
                                                <div class="me-3 mt-1">
                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                         style="width: 48px; height: 48px;">
                                                        <i class="bi bi-mortarboard text-muted"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="fw-bold mb-1">
                                                        <% if (edu.school_linkedin_url) { %>
                                                            <a href="<%= edu.school_linkedin_url %>" target="_blank" class="text-decoration-none">
                                                                <%= edu.school %>
                                                            </a>
                                                        <% } else { %>
                                                            <%= edu.school %>
                                                        <% } %>
                                                    </h6>
                                                    <% if (edu.degree) { %>
                                                        <div class="text-primary fw-medium mb-1"><%= edu.degree %></div>
                                                    <% } %>
                                                    <% if (edu.field_of_study) { %>
                                                        <div class="text-muted small mb-1"><%= edu.field_of_study %></div>
                                                    <% } %>
                                                    <% if (edu.date_range) { %>
                                                        <div class="text-muted small mb-1"><%= edu.date_range %></div>
                                                    <% } %>
                                                    <% if (edu.activities) { %>
                                                        <div class="small text-muted"><%= edu.activities %></div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Certifications Section -->
                            <% if (profile.certifications && profile.certifications.length > 0) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-transparent border-0 pb-0">
                                        <h5 class="fw-bold mb-0">
                                            <i class="bi bi-award text-primary"></i> Certifications
                                        </h5>
                                    </div>
                                    <div class="card-body pt-2">
                                        <% profile.certifications.forEach((cert, index) => { %>
                                            <div class="d-flex <% if (index < profile.certifications.length - 1) { %>mb-3 pb-3 border-bottom<% } else { %>mb-2<% } %>">
                                                <div class="me-3 mt-1">
                                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" 
                                                         style="width: 48px; height: 48px;">
                                                        <i class="bi bi-award text-muted"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="fw-bold mb-1"><%= cert.name || cert.title %></h6>
                                                    <% if (cert.authority) { %>
                                                        <div class="text-primary fw-medium mb-1"><%= cert.authority %></div>
                                                    <% } %>
                                                    <% if (cert.date || cert.issued_date) { %>
                                                        <div class="text-muted small"><%= cert.date || cert.issued_date %></div>
                                                    <% } %>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                </div>
                            <% } %>
                        </div>

                        <!-- Right Column - Sidebar Information -->
                        <div class="col-lg-4">
                            <!-- Profile Status Card -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-transparent border-0 pb-0">
                                    <h6 class="fw-bold mb-0">Profile Status</h6>
                                </div>
                                <div class="card-body pt-2">
                                    <div class="mb-3">
                                        <small class="text-muted">Profile Score</small>
                                        <div class="d-flex align-items-center">
                                            <div class="fw-bold fs-5 me-2">
                                                <span id="profileScore">—</span>
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="progress" style="height: 6px;">
                                                    <div class="progress-bar" role="progressbar" id="scoreProgress" style="width: 0%"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">Last Updated</small>
                                        <div class="fw-medium">
                                            <%= new Date(profile.timestamp || profile.created_at).toLocaleString() %>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <small class="text-muted">Profile ID</small>
                                        <div class="fw-medium small font-monospace text-muted">
                                            <%= profile.id %>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Actions Card -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-transparent border-0 pb-0">
                                    <h6 class="fw-bold mb-0">Quick Actions</h6>
                                </div>
                                <div class="card-body pt-2">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-primary" onclick="scoreProfile('<%= profile.id %>')">
                                            <i class="bi bi-award"></i> Score Profile
                                        </button>
                                        <button class="btn btn-outline-success" onclick="resyncProfile('<%= profile.id %>')">
                                            <i class="bi bi-arrow-clockwise"></i> Re-sync Data
                                        </button>
                                        <button class="btn btn-outline-info" onclick="viewScoringHistory('<%= profile.id %>')">
                                            <i class="bi bi-clock-history"></i> Scoring History
                                        </button>
                                        <button class="btn btn-outline-warning" onclick="exportProfile('<%= profile.id %>')">
                                            <i class="bi bi-download"></i> Export Profile
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Profile Navigation Card -->
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-transparent border-0 pb-0">
                                    <h6 class="fw-bold mb-0">Profile Navigation</h6>
                                </div>
                                <div class="card-body pt-2">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-secondary" onclick="navigateProfile('previous')">
                                            <i class="bi bi-chevron-left"></i> Previous Profile
                                        </button>
                                        <button class="btn btn-outline-secondary" onclick="navigateProfile('next')">
                                            <i class="bi bi-chevron-right"></i> Next Profile
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modals -->
    <!-- Score Profile Modal -->
    <div class="modal fade" id="scoreModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Score Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="scoringForm">
                        <div class="mb-3">
                            <label for="templateSelect" class="form-label">Scoring Template</label>
                            <select class="form-select" id="templateSelect" required>
                                <option value="">Select a template...</option>
                                <!-- Templates will be populated via AJAX -->
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="customPrompt" class="form-label">Custom Prompt (Optional)</label>
                            <textarea class="form-control" id="customPrompt" rows="3" 
                                      placeholder="Enter custom scoring criteria or leave blank to use template default"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" onclick="submitScoring()">
                        <i class="bi bi-award"></i> Score Profile
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
    <script>
        // Profile-specific JavaScript functions
        function scoreProfile(profileId) {
            // Load available templates
            fetch('/api/templates')
                .then(response => response.json())
                .then(result => {
                    const select = document.getElementById('templateSelect');
                    select.innerHTML = '<option value="">Select a template...</option>';
                    // Handle nested response structure
                    const templates = result.data?.templates || result.templates || result.data || [];
                    templates.forEach(template => {
                        select.innerHTML += `<option value="${template.id}">${template.name}</option>`;
                    });
                })
                .catch(error => console.error('Error loading templates:', error));
            
            // Show modal
            new bootstrap.Modal(document.getElementById('scoreModal')).show();
        }

        function submitScoring() {
            const profileId = '<%= profile.id %>';
            const templateId = document.getElementById('templateSelect').value;
            const customPrompt = document.getElementById('customPrompt').value;

            if (!templateId) {
                alert('Please select a scoring template');
                return;
            }

            const requestData = {
                template_id: templateId,
                profile_id: profileId
            };

            if (customPrompt.trim()) {
                requestData.custom_prompt = customPrompt.trim();
            }

            fetch(`/api/profiles/${profileId}/score`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(requestData)
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('scoreModal')).hide();
                    showNotification('Profile scoring started successfully', 'success');
                    // Extract job_id from nested response structure
                    const jobId = result.data?.job_id || result.job_id;
                    // Redirect to scoring job page or profile page
                    setTimeout(() => {
                        if (jobId) {
                            window.location.href = `/scoring/jobs/${jobId}`;
                        } else {
                            // Fallback to profile page
                            location.reload();
                        }
                    }, 2000);
                } else {
                    showNotification('Error starting profile scoring: ' + result.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Error starting profile scoring', 'error');
            });
        }

        function exportProfile(profileId) {
            window.location.href = `/api/profiles/${profileId}/export`;
        }

        function deleteProfile(profileId) {
            if (confirm('Are you sure you want to delete this profile? This action cannot be undone.')) {
                fetch(`/api/profiles/${profileId}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(result => {
                    if (result.success) {
                        showNotification('Profile deleted successfully', 'success');
                        window.location.href = '/profiles';
                    } else {
                        showNotification('Error deleting profile: ' + result.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Error deleting profile', 'error');
                });
            }
        }

        function resyncProfile(profileId) {
            fetch(`/api/profiles/${profileId}/resync`, {
                method: 'POST'
            })
            .then(response => response.json())
            .then(result => {
                if (result.success) {
                    showNotification('Profile re-sync started', 'success');
                    setTimeout(() => {
                        location.reload();
                    }, 3000);
                } else {
                    showNotification('Error starting profile re-sync: ' + result.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Error starting profile re-sync', 'error');
            });
        }

        function viewScoringHistory(profileId) {
            window.location.href = `/profiles/${profileId}/scoring-history`;
        }

        function navigateProfile(direction) {
            const currentUrl = window.location.pathname;
            const profileId = currentUrl.split('/').pop();
            
            fetch(`/api/profiles/${profileId}/navigate?direction=${direction}`)
                .then(response => response.json())
                .then(result => {
                    if (result.success && result.profile_id) {
                        window.location.href = `/profiles/${result.profile_id}`;
                    } else {
                        showNotification(`No ${direction} profile available`, 'info');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('Error navigating profiles', 'error');
                });
        }

        // Load profile scoring information and company mappings asynchronously
        document.addEventListener('DOMContentLoaded', function() {
            const profileId = '<%= profile.id %>';
            
            // Load current profile score (with proper endpoint)
            fetch(`/api/profiles/${profileId}/score`)
                .then(response => response.json())
                .then(result => {
                    if (result.score !== null && result.score !== undefined) {
                        document.getElementById('profileScore').textContent = result.score.toFixed(1);
                        document.getElementById('scoreProgress').style.width = (result.score * 10) + '%';
                        
                        // Color code the progress bar
                        const progressBar = document.getElementById('scoreProgress');
                        if (result.score >= 8) {
                            progressBar.className = 'progress-bar bg-success';
                        } else if (result.score >= 6) {
                            progressBar.className = 'progress-bar bg-warning';
                        } else {
                            progressBar.className = 'progress-bar bg-danger';
                        }
                        
                        console.log(`Profile score loaded: ${result.score} (job: ${result.job_id})`);
                    } else {
                        console.log('No scoring data available for this profile yet');
                    }
                })
                .catch(error => {
                    console.log('Error fetching score:', error);
                });
            
            // Company mapping temporarily disabled for performance testing
            console.log('Company mapping disabled for performance optimization');
        });
    </script>
</body>
</html>
