<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LinkedIn Ingestion Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="sidebar-wrapper px-0">
                <%- include('../partials/sidebar') %>
            </div>
            
            <!-- Main Content -->
            <div class="main-content">
                <%- include('../partials/header', { pageTitle: title }) %>
                
                <div class="container-fluid py-4">
                    <!-- Breadcrumb -->
                    <nav aria-label="breadcrumb" class="mb-4">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/companies">Companies</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><%= company.company_name || 'Unknown Company' %></li>
                        </ol>
                    </nav>

                    <!-- Company Header -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-8">
                                    <div class="d-flex align-items-center mb-3">
                                        <% if (company.logo_url) { %>
                                            <img src="<%= company.logo_url %>" alt="<%= company.company_name %> logo" 
                                                 class="me-3 rounded" 
                                                 style="width: 64px; height: 64px; object-fit: cover;"
                                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center me-3" 
                                                 style="width: 64px; height: 64px; display: none;">
                                                <i class="bi bi-building fs-4 text-muted"></i>
                                            </div>
                                        <% } else { %>
                                            <div class="bg-light rounded d-flex align-items-center justify-content-center me-3" 
                                                 style="width: 64px; height: 64px;">
                                                <i class="bi bi-building fs-4 text-muted"></i>
                                            </div>
                                        <% } %>
                                        <div>
                                            <h2 class="fw-bold mb-1"><%= company.company_name || 'Unknown Company' %></h2>
                                            <% if (company.tagline) { %>
                                                <p class="text-muted mb-1 fst-italic"><%= company.tagline %></p>
                                            <% } %>
                                            <div class="d-flex gap-3 align-items-center">
                                                <% if (company.website) { %>
                                                    <a href="<%= company.website %>" target="_blank" class="text-decoration-none">
                                                        <i class="bi bi-globe me-1"></i> Website
                                                    </a>
                                                <% } %>
                                                <% if (company.linkedin_url) { %>
                                                    <a href="<%= company.linkedin_url %>" target="_blank" class="text-decoration-none">
                                                        <i class="bi bi-linkedin me-1"></i> LinkedIn
                                                    </a>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4 text-md-end">
                                    <% if (company.is_startup) { %>
                                        <span class="badge bg-success fs-6 mb-2">Startup</span><br>
                                    <% } %>
                                    <% if (company.size_category) { %>
                                        <span class="badge bg-primary fs-6"><%= company.size_category %></span>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Company Details -->
                        <div class="col-lg-8">
                            <!-- Description -->
                            <% if (company.description) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-white">
                                        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>About</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-0"><%= company.description %></p>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Locations -->
                            <% if (company.locations && company.locations.length > 0) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-white">
                                        <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Locations</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <% company.locations.forEach((location, index) => { %>
                                                <div class="col-md-6 mb-3">
                                                    <div class="p-3 bg-light rounded">
                                                        <h6 class="mb-2">
                                                            <% if (location.is_headquarters) { %>
                                                                <i class="bi bi-house-fill text-primary me-1"></i>Headquarters
                                                            <% } else { %>
                                                                <i class="bi bi-geo-alt-fill text-secondary me-1"></i>Office
                                                            <% } %>
                                                        </h6>
                                                        <address class="mb-0 small">
                                                            <% if (location.address_line1) { %><%= location.address_line1 %><br><% } %>
                                                            <% if (location.address_line2) { %><%= location.address_line2 %><br><% } %>
                                                            <%= [location.city, location.region].filter(Boolean).join(', ') %>
                                                            <% if (location.postal_code) { %> <%= location.postal_code %><% } %><br>
                                                            <% if (location.country) { %><%= location.country %><% } %>
                                                        </address>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Funding Information -->
                            <% if (company.funding_info) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-white">
                                        <h5 class="mb-0"><i class="bi bi-currency-dollar me-2"></i>Funding Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <% if (company.funding_info.total_funding) { %>
                                                <div class="col-md-6 mb-3">
                                                    <strong>Total Funding:</strong><br>
                                                    <span class="text-success fs-5">$<%= company.funding_info.total_funding %></span>
                                                </div>
                                            <% } %>
                                            <% if (company.funding_info.last_funding_round) { %>
                                                <div class="col-md-6 mb-3">
                                                    <strong>Last Round:</strong><br>
                                                    <%= company.funding_info.last_funding_round.round_type || 'Unknown' %>
                                                    <% if (company.funding_info.last_funding_round.amount) { %>
                                                        - $<%= company.funding_info.last_funding_round.amount %>
                                                    <% } %>
                                                </div>
                                            <% } %>
                                            <% if (company.funding_info.crunchbase_url) { %>
                                                <div class="col-12">
                                                    <a href="<%= company.funding_info.crunchbase_url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                        <i class="bi bi-box-arrow-up-right me-1"></i>View on Crunchbase
                                                    </a>
                                                </div>
                                            <% } %>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <!-- Affiliated Companies -->
                            <% if (company.affiliated_companies && company.affiliated_companies.length > 0) { %>
                                <div class="card border-0 shadow-sm mb-4">
                                    <div class="card-header bg-white">
                                        <h5 class="mb-0"><i class="bi bi-diagram-3 me-2"></i>Affiliated Companies</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="list-group list-group-flush">
                                            <% company.affiliated_companies.forEach(affiliate => { %>
                                                <div class="list-group-item border-0 px-0">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h6 class="mb-1"><%= affiliate.name %></h6>
                                                            <% if (affiliate.relationship_type) { %>
                                                                <small class="text-muted">
                                                                    <span class="badge bg-secondary"><%= affiliate.relationship_type %></span>
                                                                </small>
                                                            <% } %>
                                                        </div>
                                                        <% if (affiliate.linkedin_url) { %>
                                                            <a href="<%= affiliate.linkedin_url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                                <i class="bi bi-linkedin"></i>
                                                            </a>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            <% }) %>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        </div>

                        <!-- Sidebar -->
                        <div class="col-lg-4">
                            <!-- Quick Stats -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-white">
                                    <h5 class="mb-0"><i class="bi bi-bar-chart me-2"></i>Quick Stats</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center">
                                        <% if (company.employee_count) { %>
                                            <div class="col-6 mb-3">
                                                <div class="text-primary fs-4 fw-bold"><%= company.employee_count.toLocaleString() %></div>
                                                <small class="text-muted">Employees</small>
                                            </div>
                                        <% } %>
                                        <% if (company.follower_count) { %>
                                            <div class="col-6 mb-3">
                                                <div class="text-info fs-4 fw-bold"><%= company.follower_count.toLocaleString() %></div>
                                                <small class="text-muted">LinkedIn Followers</small>
                                            </div>
                                        <% } %>
                                        <% if (company.year_founded) { %>
                                            <div class="col-6 mb-3">
                                                <div class="text-secondary fs-4 fw-bold"><%= company.year_founded %></div>
                                                <small class="text-muted">Founded</small>
                                            </div>
                                        <% } %>
                                        <% if (company.company_age) { %>
                                            <div class="col-6 mb-3">
                                                <div class="text-success fs-4 fw-bold"><%= company.company_age %></div>
                                                <small class="text-muted">Years Old</small>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- Company Info -->
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-white">
                                    <h5 class="mb-0"><i class="bi bi-info-square me-2"></i>Company Details</h5>
                                </div>
                                <div class="card-body">
                                    <% if (company.industries && company.industries.length > 0) { %>
                                        <div class="mb-3">
                                            <strong class="d-block mb-1">Industries:</strong>
                                            <% company.industries.forEach(industry => { %>
                                                <span class="badge bg-light text-dark me-1 mb-1"><%= industry %></span>
                                            <% }) %>
                                        </div>
                                    <% } %>

                                    <% if (company.specialties) { %>
                                        <div class="mb-3">
                                            <strong class="d-block mb-1">Specialties:</strong>
                                            <small class="text-muted"><%= company.specialties %></small>
                                        </div>
                                    <% } %>

                                    <% if (company.employee_range) { %>
                                        <div class="mb-3">
                                            <strong class="d-block mb-1">Employee Range:</strong>
                                            <small class="text-muted"><%= company.employee_range %></small>
                                        </div>
                                    <% } %>

                                    <% if (company.domain) { %>
                                        <div class="mb-3">
                                            <strong class="d-block mb-1">Domain:</strong>
                                            <small class="text-muted"><%= company.domain %></small>
                                        </div>
                                    <% } %>

                                    <!-- Headquarters -->
                                    <% if (company.hq_city || company.hq_region || company.hq_country) { %>
                                        <div class="mb-3">
                                            <strong class="d-block mb-1">Headquarters:</strong>
                                            <small class="text-muted">
                                                <i class="bi bi-geo-alt me-1"></i>
                                                <%= [company.hq_city, company.hq_region, company.hq_country].filter(Boolean).join(', ') %>
                                            </small>
                                            <% if (company.hq_full_address) { %>
                                                <br><small class="text-muted"><%= company.hq_full_address %></small>
                                            <% } %>
                                        </div>
                                    <% } %>
                                </div>
                            </div>

                            <!-- Actions -->
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-white">
                                    <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Actions</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="/profiles?company=<%= encodeURIComponent(company.company_name) %>" class="btn btn-primary">
                                            <i class="bi bi-people me-2"></i>View Profiles
                                        </a>
                                        <% if (company.linkedin_url) { %>
                                            <a href="<%= company.linkedin_url %>" target="_blank" class="btn btn-outline-primary">
                                                <i class="bi bi-linkedin me-2"></i>View on LinkedIn
                                            </a>
                                        <% } %>
                                        <% if (company.website) { %>
                                            <a href="<%= company.website %>" target="_blank" class="btn btn-outline-secondary">
                                                <i class="bi bi-globe me-2"></i>Visit Website
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Associated Profiles -->
                    <% if (profiles && profiles.length > 0) { %>
                        <div class="card border-0 shadow-sm mt-4">
                            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                                <h5 class="mb-0"><i class="bi bi-people me-2"></i>Associated Profiles (<%= profiles.length %>)</h5>
                                <a href="/profiles?company=<%= encodeURIComponent(company.company_name) %>" class="btn btn-outline-primary btn-sm">
                                    View All <i class="bi bi-arrow-right"></i>
                                </a>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Name</th>
                                                <th>Title</th>
                                                <th>Experience</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% profiles.slice(0, 10).forEach(profile => { %>
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" 
                                                                 style="width: 32px; height: 32px;">
                                                                <i class="bi bi-person text-muted"></i>
                                                            </div>
                                                            <div>
                                                                <div class="fw-medium">
                                                                    <a href="/profiles/<%= profile.id %>" class="text-decoration-none">
                                                                        <%= [profile.first_name, profile.last_name].filter(Boolean).join(' ') || 'Unknown' %>
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="text-muted"><%= profile.current_title || 'N/A' %></span>
                                                    </td>
                                                    <td>
                                                        <% if (profile.experience_years) { %>
                                                            <span class="badge bg-info"><%= profile.experience_years %> years</span>
                                                        <% } else { %>
                                                            <span class="text-muted">N/A</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <a href="/profiles/<%= profile.id %>" class="btn btn-outline-primary btn-sm">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
