<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LinkedIn Ingestion Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="sidebar-wrapper px-0">
                <%- include('partials/sidebar') %>
            </div>
            
            <!-- Main Content -->
            <div class="main-content">
                <%- include('partials/header', { pageTitle: title }) %>
                
                <div class="container-fluid py-4">
                    <!-- Statistics Cards -->
                    <div class="row mb-4">
                        <div class="col-md-4 mb-3">
                            <div class="card stat-card border-0 shadow-sm">
                                <div class="card-body d-flex align-items-center">
                                    <div class="stat-icon bg-primary">
                                        <i class="bi bi-people-fill text-white"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0 fw-bold"><%= statistics.profileCount %></h3>
                                        <p class="text-muted mb-0 small">Total Profiles</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <div class="card stat-card border-0 shadow-sm">
                                <div class="card-body d-flex align-items-center">
                                    <div class="stat-icon bg-success">
                                        <i class="bi bi-building text-white"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0 fw-bold"><%= statistics.companyCount %></h3>
                                        <p class="text-muted mb-0 small">Companies</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <div class="card stat-card border-0 shadow-sm">
                                <div class="card-body d-flex align-items-center">
                                    <div class="stat-icon bg-info">
                                        <i class="bi bi-clock-history text-white"></i>
                                    </div>
                                    <div class="ms-3">
                                        <h3 class="mb-0 fw-bold"><%= statistics.recentCount %></h3>
                                        <p class="text-muted mb-0 small">Recent Activity</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Recent Profiles & System Status -->
                    <div class="row">
                        <div class="col-lg-8 mb-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0 fw-bold">Recent Profiles</h5>
                                    <a href="/profiles" class="btn btn-sm btn-outline-primary">
                                        View All <i class="bi bi-arrow-right"></i>
                                    </a>
                                </div>
                                <div class="card-body">
                                    <% if (recentProfiles && recentProfiles.length > 0) { %>
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Name</th>
                                                        <th>Company</th>
                                                        <th>Title</th>
                                                        <th>Added</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% recentProfiles.slice(0, 5).forEach(profile => { %>
                                                        <tr>
                                                            <td class="fw-medium">
                                                                <% if (profile.name || profile.full_name) { %>
                                                                    <%= profile.name || profile.full_name %>
                                                                <% } else { %>
                                                                    <span class="text-muted">No name</span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (profile.current_company) { %>
                                                                    <%= profile.current_company %>
                                                                <% } else { %>
                                                                    <span class="text-muted">—</span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <% if (profile.current_position) { %>
                                                                    <%= profile.current_position.substring(0, 30) %>...
                                                                <% } else { %>
                                                                    <span class="text-muted">—</span>
                                                                <% } %>
                                                            </td>
                                                            <td class="text-muted small">
                                                                <% if (profile.created_at) { %>
                                                                    <%= new Date(profile.created_at).toLocaleDateString() %>
                                                                <% } else { %>
                                                                    —
                                                                <% } %>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                </tbody>
                                            </table>
                                        </div>
                                    <% } else { %>
                                        <div class="text-center py-4">
                                            <i class="bi bi-people text-muted" style="font-size: 3rem;"></i>
                                            <p class="text-muted mt-2">No profiles available yet</p>
                                            <a href="/ingestion" class="btn btn-primary">
                                                <i class="bi bi-plus-circle"></i> Add First Profile
                                            </a>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-4 mb-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-white border-bottom-0">
                                    <h5 class="mb-0 fw-bold">System Status</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        <% if (systemHealth && systemHealth.status === 'healthy') { %>
                                            <div class="status-indicator bg-success"></div>
                                            <span class="text-success fw-medium">API Service</span>
                                        <% } else { %>
                                            <div class="status-indicator bg-warning"></div>
                                            <span class="text-warning fw-medium">API Service</span>
                                        <% } %>
                                    </div>
                                    
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="status-indicator bg-success"></div>
                                        <span class="text-success fw-medium">Admin Interface</span>
                                    </div>
                                    
                                    <% if (systemHealth && systemHealth.database) { %>
                                        <div class="d-flex align-items-center mb-3">
                                            <div class="status-indicator bg-success"></div>
                                            <span class="text-success fw-medium">Database</span>
                                        </div>
                                    <% } %>
                                    
                                    <hr class="my-3">
                                    
                                    <div class="quick-actions">
                                        <h6 class="fw-bold mb-2">Quick Actions</h6>
                                        <div class="d-grid gap-2">
                                            <a href="/ingestion" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-plus-circle"></i> Add Profile
                                            </a>
                                            <a href="/scoring" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-star"></i> Run Scoring
                                            </a>
                                            <a href="/templates" class="btn btn-outline-info btn-sm">
                                                <i class="bi bi-file-text"></i> Manage Templates
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/app.js"></script>
    <% if (typeof pageScript !== 'undefined') { %>
        <script src="/js/<%= pageScript %>.js"></script>
    <% } %>
</body>
</html>
