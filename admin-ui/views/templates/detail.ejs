<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LinkedIn Ingestion Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="sidebar-wrapper px-0">
                <%- include('../partials/sidebar') %>
            </div>
            
            <!-- Main Content -->
            <div class="main-content">
                <%- include('../partials/header', { pageTitle: title }) %>
                
                <div class="container-fluid py-4">
                    <!-- Page Header with Actions -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/templates">Templates</a></li>
                                    <li class="breadcrumb-item active"><%= template.name %></li>
                                </ol>
                            </nav>
                            <h2 class="mb-0"><i class="bi bi-file-text me-2"></i><%= template.name %></h2>
                            <p class="text-muted mb-0"><%= template.description || 'No description provided' %></p>
                        </div>
                        <div>
                            <a href="/templates" class="btn btn-outline-secondary me-2">
                                <i class="bi bi-arrow-left me-1"></i> Back to Templates
                            </a>
                            <a href="/templates/<%= template.id %>/versions" class="btn btn-outline-info me-2">
                                <i class="bi bi-clock-history me-1"></i> Version History
                            </a>
                            <a href="/templates/<%= template.id %>/edit" class="btn btn-outline-primary me-2">
                                <i class="bi bi-pencil me-1"></i> Edit Template
                            </a>
                            <button class="btn btn-success" onclick="useTemplate('<%= template.id %>', '<%= template.name %>')">
                                <i class="bi bi-play-circle me-1"></i> Use for Scoring
                            </button>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Template Content -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="bi bi-code me-2"></i>Prompt Template</h5>
                                </div>
                                <div class="card-body">
                                    <pre class="bg-light p-3 rounded" style="white-space: pre-wrap; max-height: 500px; overflow-y: auto;"><code id="promptText"><%= template.prompt_text %></code></pre>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div>
                                            <span class="text-muted"><%= template.prompt_text ? template.prompt_text.length : 0 %> characters</span>
                                        </div>
                                        <div>
                                            <button class="btn btn-outline-secondary btn-sm me-2" onclick="copyPrompt()">
                                                <i class="bi bi-clipboard me-1"></i> Copy
                                            </button>
                                            <button class="btn btn-outline-info btn-sm" onclick="testTemplate('<%= template.id %>')">
                                                <i class="bi bi-play-circle me-1"></i> Test
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Usage Statistics -->
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Usage Statistics</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h4 class="text-primary"><%= template.usage_count || 0 %></h4>
                                                <p class="text-muted mb-0">Total Uses</p>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h4 class="text-success"><%= template.success_count || 0 %></h4>
                                                <p class="text-muted mb-0">Successful Runs</p>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h4 class="text-info"><%= template.avg_score || 'N/A' %></h4>
                                                <p class="text-muted mb-0">Avg Score</p>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="text-center">
                                                <h4 class="text-warning"><%= template.last_used ? new Date(template.last_used).toLocaleDateString() : 'Never' %></h4>
                                                <p class="text-muted mb-0">Last Used</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-4">
                            <!-- Template Information -->
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Template Information</h6>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">ID:</dt>
                                        <dd class="col-sm-8"><code><%= template.id %></code></dd>
                                        
                                        <dt class="col-sm-4">Category:</dt>
                                        <dd class="col-sm-8"><span class="badge bg-primary"><%= template.category %></span></dd>
                                        
                                        <dt class="col-sm-4">Version:</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-success">v<%= template.version || '1.0' %></span>
                                            <a href="/templates/<%= template.id %>/versions" class="btn btn-outline-info btn-sm ms-2">
                                                <i class="bi bi-clock-history"></i> History
                                            </a>
                                        </dd>
                                        
                                        <dt class="col-sm-4">Model:</dt>
                                        <dd class="col-sm-8"><%= template.model || 'gpt-4o' %></dd>
                                        
                                        <dt class="col-sm-4">Status:</dt>
                                        <dd class="col-sm-8">
                                            <% if (template.is_active) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </dd>
                                        
                                        <dt class="col-sm-4">Created:</dt>
                                        <dd class="col-sm-8"><%= new Date(template.created_at).toLocaleString() %></dd>
                                        
                                        <% if (template.updated_at) { %>
                                            <dt class="col-sm-4">Updated:</dt>
                                            <dd class="col-sm-8"><%= new Date(template.updated_at).toLocaleString() %></dd>
                                        <% } %>
                                    </dl>
                                </div>
                            </div>

                            <!-- Version Management -->
                            <div class="card mb-3">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="bi bi-branches me-2"></i>Version Management</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <a href="/templates/<%= template.id %>/versions" class="btn btn-outline-info">
                                            <i class="bi bi-clock-history me-1"></i> View Version History
                                        </a>
                                        <button class="btn btn-outline-success" onclick="createNewVersion('<%= template.id %>')">
                                            <i class="bi bi-plus-circle me-1"></i> Create New Version
                                        </button>
                                        <button class="btn btn-outline-warning" onclick="saveAsNewVersion('<%= template.id %>')">
                                            <i class="bi bi-files me-1"></i> Save as New Version
                                        </button>
                                    </div>
                                </div>
                            </div>

                            <!-- Quick Actions -->
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-grid gap-2">
                                        <button class="btn btn-outline-success" onclick="useTemplate('<%= template.id %>', '<%= template.name %>')">
                                            <i class="bi bi-play-circle me-1"></i> Use for Scoring
                                        </button>
                                        <button class="btn btn-outline-primary" onclick="duplicateTemplate('<%= template.id %>')">
                                            <i class="bi bi-files me-1"></i> Duplicate Template
                                        </button>
                                        <button class="btn btn-outline-info" onclick="exportTemplate('<%= template.id %>')">
                                            <i class="bi bi-download me-1"></i> Export Template
                                        </button>
                                        <hr class="my-2">
                                        <% if (template.is_active) { %>
                                            <button class="btn btn-outline-warning" onclick="deactivateTemplate('<%= template.id %>', '<%= template.name %>')">
                                                <i class="bi bi-pause-circle me-1"></i> Deactivate
                                            </button>
                                        <% } else { %>
                                            <button class="btn btn-outline-success" onclick="activateTemplate('<%= template.id %>', '<%= template.name %>')">
                                                <i class="bi bi-play-circle me-1"></i> Activate
                                            </button>
                                        <% } %>
                                        <button class="btn btn-outline-danger" onclick="deleteTemplate('<%= template.id %>', '<%= template.name %>')">
                                            <i class="bi bi-trash me-1"></i> Delete Template
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Template Management JavaScript -->
    <script src="/js/templates-detail.js"></script>
</body>
</html>
