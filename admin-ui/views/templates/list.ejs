<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - LinkedIn Ingestion Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/app.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="sidebar-wrapper px-0">
                <%- include('../partials/sidebar') %>
            </div>
            
            <!-- Main Content -->
            <div class="main-content">
                <%- include('../partials/header', { pageTitle: title }) %>
                
                <div class="container-fluid py-4">
                    <!-- Page Header with Actions -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <h2 class="fw-bold mb-1"><i class="bi bi-file-text me-2"></i><%= title %></h2>
                            <p class="text-muted mb-0">
                                <% if (templates && templates.templates) { %>
                                    <%= templates.templates.length %> templates available
                                <% } else { %>
                                    No templates found
                                <% } %>
                            </p>
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary" onclick="refreshTemplates()">
                                <i class="bi bi-arrow-clockwise"></i> Refresh
                            </button>
                            <a href="/templates/new" class="btn btn-primary">
                                <i class="bi bi-plus-circle me-1"></i> New Template
                            </a>
                        </div>
                    </div>

                    <!-- Search and Filter Bar -->
                    <div class="search-filter-bar mb-4">
                        <div class="row g-3">
                            <!-- Search Input -->
                            <div class="col-md-4">
                                <label for="searchInput" class="form-label">Search Templates</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-search"></i>
                                    </span>
                                    <input type="text" id="searchInput" class="form-control" 
                                           placeholder="Search by name or description..." 
                                           onkeyup="searchTemplates()">
                                </div>
                            </div>
                            
                            <!-- Category Filter -->
                            <div class="col-md-3">
                                <label for="categoryFilter" class="form-label">Category</label>
                                <select id="categoryFilter" class="form-select" onchange="filterTemplates()">
                                    <option value="">All Categories</option>
                                    <option value="CTO">CTO</option>
                                    <option value="CIO">CIO</option>
                                    <option value="CISO">CISO</option>
                                    <option value="VP_ENGINEERING">VP Engineering</option>
                                    <option value="DIRECTOR">Director</option>
                                    <option value="CUSTOM">Custom</option>
                                </select>
                            </div>
                            
                            <!-- Status Filter -->
                            <div class="col-md-3">
                                <label for="statusFilter" class="form-label">Status</label>
                                <select id="statusFilter" class="form-select" onchange="filterTemplates()">
                                    <option value="active">Active Only</option>
                                    <option value="all">All Templates</option>
                                    <option value="inactive">Inactive Only</option>
                                </select>
                            </div>
                            
                            <!-- Clear Filters -->
                            <div class="col-md-2">
                                <label class="form-label">&nbsp;</label>
                                <div class="d-grid">
                                    <button class="btn btn-outline-secondary" onclick="clearFilters()">
                                        <i class="bi bi-x-circle"></i> Clear
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Templates Table -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0" id="templatesTable">
                                    <thead class="table-light">
                                        <tr>
                                            <th class="sortable" data-column="name">
                                                Name <i class="bi bi-chevron-expand"></i>
                                            </th>
                                            <th class="sortable" data-column="category">
                                                Category <i class="bi bi-chevron-expand"></i>
                                            </th>
                                            <th>Description</th>
                                            <th class="sortable" data-column="version">
                                                Version <i class="bi bi-chevron-expand"></i>
                                            </th>
                                            <th class="sortable" data-column="created_at">
                                                Created <i class="bi bi-chevron-expand"></i>
                                            </th>
                                            <th class="sortable" data-column="is_active">
                                                Status <i class="bi bi-chevron-expand"></i>
                                            </th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody id="templatesTableBody">
                                        <% if (templates && templates.templates && templates.templates.length > 0) { %>
                                            <% templates.templates.forEach(template => { %>
                                                <tr data-template-id="<%= template.id %>" 
                                                    data-category="<%= template.category %>" 
                                                    data-status="<%= template.is_active ? 'active' : 'inactive' %>">
                                                    <td>
                                                        <div class="fw-medium">
                                                            <a href="/templates/<%= template.id %>" class="text-decoration-none text-dark">
                                                                <%= template.name %>
                                                            </a>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-primary"><%= template.category %></span>
                                                    </td>
                                                    <td>
                                                        <div class="template-description text-truncate" 
                                                             style="max-width: 200px;" 
                                                             title="<%= template.description %>">
                                                            <%= template.description || 'No description' %>
                                                        </div>
                                                    </td>
                                                    <td><%= template.version || '1.0' %></td>
                                                    <td>
                                                        <small class="text-muted">
                                                            <%= new Date(template.created_at).toLocaleDateString() %>
                                                        </small>
                                                    </td>
                                                    <td>
                                                        <% if (template.is_active) { %>
                                                            <span class="badge bg-success">Active</span>
                                                        <% } else { %>
                                                            <span class="badge bg-secondary">Inactive</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group" role="group">
                                                            <a href="/templates/<%= template.id %>" 
                                                               class="btn btn-outline-primary btn-sm" 
                                                               title="View Details">
                                                                <i class="bi bi-eye"></i>
                                                            </a>
                                                            <a href="/templates/<%= template.id %>/edit" 
                                                               class="btn btn-outline-secondary btn-sm" 
                                                               title="Edit Template">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <button class="btn btn-outline-success btn-sm" 
                                                                    onclick="useTemplate('<%= template.id %>', '<%= template.name %>')" 
                                                                    title="Use for Scoring">
                                                                <i class="bi bi-play-circle"></i>
                                                            </button>
                                                            <div class="dropdown">
                                                                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" 
                                                                        type="button" data-bs-toggle="dropdown">
                                                                    <i class="bi bi-three-dots"></i>
                                                                </button>
                                                                <ul class="dropdown-menu">
                                                                    <li><button class="dropdown-item" onclick="duplicateTemplate('<%= template.id %>')">
                                                                        <i class="bi bi-files me-2"></i>Duplicate
                                                                    </button></li>
                                                                    <li><button class="dropdown-item" onclick="exportTemplate('<%= template.id %>')">
                                                                        <i class="bi bi-download me-2"></i>Export
                                                                    </button></li>
                                                                    <li><hr class="dropdown-divider"></li>
                                                                    <% if (template.is_active) { %>
                                                                        <li><button class="dropdown-item text-warning" 
                                                                                onclick="deactivateTemplate('<%= template.id %>', '<%= template.name %>')">
                                                                            <i class="bi bi-pause-circle me-2"></i>Deactivate
                                                                        </button></li>
                                                                    <% } else { %>
                                                                        <li><button class="dropdown-item text-success" 
                                                                                onclick="activateTemplate('<%= template.id %>', '<%= template.name %>')">
                                                                            <i class="bi bi-play-circle me-2"></i>Activate
                                                                        </button></li>
                                                                    <% } %>
                                                                    <li><button class="dropdown-item text-danger" 
                                                                            onclick="deleteTemplate('<%= template.id %>', '<%= template.name %>')">
                                                                        <i class="bi bi-trash me-2"></i>Delete
                                                                    </button></li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="7" class="text-center py-5">
                                                    <div class="text-muted">
                                                        <i class="bi bi-file-text fs-1 d-block mb-3"></i>
                                                        <h5>No templates found</h5>
                                                        <p>Get started by creating your first prompt template.</p>
                                                        <a href="/templates/new" class="btn btn-primary">
                                                            <i class="bi bi-plus-circle me-1"></i> Create Template
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!-- Stats Summary -->
                    <% if (templates && templates.templates && templates.templates.length > 0) { %>
                        <div class="row mt-4">
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Total Templates</h5>
                                        <h3 class="text-primary"><%= templates.templates.length %></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Active</h5>
                                        <h3 class="text-success"><%= templates.templates.filter(t => t.is_active).length %></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Categories</h5>
                                        <h3 class="text-info"><%= [...new Set(templates.templates.map(t => t.category))].length %></h3>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="card bg-light">
                                    <div class="card-body text-center">
                                        <h5 class="card-title">Most Recent</h5>
                                        <p class="mb-0">
                                            <% const mostRecent = templates.templates.sort((a, b) => new Date(b.created_at) - new Date(a.created_at))[0]; %>
                                            <%= new Date(mostRecent.created_at).toLocaleDateString() %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Template Management JavaScript -->
    <script src="/js/templates-list.js"></script>
</body>
</html>
