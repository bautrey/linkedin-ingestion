{
  "name": "linkedin-ingestion-admin-ui",
  "version": "1.0.0",
  "description": "Simple admin UI for LinkedIn Ingestion Service",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js --ignore logs/ --ignore *.log",
    "dev:quiet": "nodemon server.js --quiet --ignore logs/ --ignore *.log",
    "background": "nohup npm start > logs/server.log 2>&1 & echo \"Server started in background. PID: $!\"",
    "stop": "pkill -f \"node server.js\" || echo \"No server process found\"",
    "status": "ps aux | grep -v grep | grep \"node server.js\" || echo \"Server not running\"",
    "logs": "tail -f logs/server.log",
    "logs:error": "tail -f logs/error.log",
    "test": "jest",
    "lint": "eslint ."
  },
  "dependencies": {
    "axios": "^1.11.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "helmet": "^7.2.0",
    "socket.io": "^4.8.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.54.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "admin-ui",
    "linkedin",
    "express",
    "bootstrap"
  ],
  "author": "LinkedIn Ingestion Team",
  "license": "MIT"
}
